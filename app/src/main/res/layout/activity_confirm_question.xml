<?xml version="1.0" encoding="utf-8"?>
<com.liuguangqiang.swipeback.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeBackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- SwipeBackLayout must contains only one direct child -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cell_perfil_picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_user" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_green_background"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:padding="7dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_eye"
                        android:background="@color/transparent"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/cell_question_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="PÃºblico"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/cell_cancel_button"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_letter_x"
                        android:layout_marginRight="25dp"
                        android:background="#00000000"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/cell_question_input"

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="15dp"

                android:textSize="20sp"
                android:textColor="@color/oa_black"
                android:text="gente, qual a melhor cor para uma festa de formatura?"
                android:background="#00000000"

                />

            <LinearLayout
                android:id="@+id/cell_alternatives_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_list"
                    android:layout_gravity="center_vertical"/>

                <RelativeLayout
                    android:id="@+id/uploaded_image_1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#F3F6FD">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_blue_add"
                        android:background="#F3F6FD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/uploaded_image_2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#F3F6FD">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_blue_add"
                        android:background="#F3F6FD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/uploaded_image_3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#F3F6FD">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_blue_add"
                        android:background="#F3F6FD"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/uploaded_image_4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#F3F6FD">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_blue_add"
                        android:background="#F3F6FD"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cell_time_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_time"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/oa_light_gray_text"
                    android:text="Tempo para expirar:"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/cell_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 h 30 min"
                    android:layout_marginLeft="25dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#35A6CD"/>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/cell_tags_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_tag"
                    android:layout_gravity="center_vertical"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/confirm_tags_recycler_view"
                    android:layout_marginLeft="10dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/cell_confirm_button"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="7dp"

                    android:text="Perguntar"
                    android:textColor="@color/white"
                    android:textSize="20sp"


                    android:background="@drawable/rounded_button"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"

                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</com.liuguangqiang.swipeback.SwipeBackLayout>