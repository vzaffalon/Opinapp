<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tutorial2"
        android:layout_weight="1"/>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">
            <TextView
                android:id="@+id/pergunte_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pergunte!"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:layout_marginTop="12dp"
                android:textColor="#393939"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@id/pergunte_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione o botão “+” no centro do menu e faça uma pergunta simples ou uma enquete. Você pode até colocar fotos :D"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#B7B7B7"/>
        </RelativeLayout>

</LinearLayout>