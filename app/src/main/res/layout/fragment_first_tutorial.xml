<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tutorial1"
        android:layout_weight="1"/>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">
            <TextView
                android:id="@+id/duvida_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surgiu uma dúvida?"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:textColor="#393939"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/duvida_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ou só quer dar sua opinião para amigos e pessoas da sua região? Abra o Opinow e comece a opinar! O cadastro é opcional :)"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#B7B7B7"/>
    </RelativeLayout>

</LinearLayout>